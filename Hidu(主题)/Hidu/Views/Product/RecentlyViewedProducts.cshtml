@model IList<ProductOverviewModel>
@{
    Layout = "~/Views/Shared/_ColumnsTwo.cshtml";

    //title
    Html.AddTitleParts(T("PageTitle.RecentlyViewedProducts").Text);
}
@using Nop.Web.Models.Catalog;
<div class="page">
    <div class="homepage-category">
        <div class="page-title">
            <div class="title">
                <h1><strong>@T("Products.RecentlyViewedProducts")</strong></h1>
            </div>
        </div>
        <div class="category-product-grid">
            @if (Model.Count > 0)
            {
                <div class="row">
                    @foreach (var product in Model)
                    {
                        <div class="col-xs-6 col-sm-6 col-md-4 col-lg-4 product-item-box">
                            @Html.Partial("_ProductBox", product)
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>

